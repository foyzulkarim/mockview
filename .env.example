# MockView Environment Configuration
# Copy this file to .env.local and adjust values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://mockview:mockview_dev@localhost:5432/mockview
POSTGRES_USER=mockview
POSTGRES_PASSWORD=mockview_dev
POSTGRES_DB=mockview
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# OLLAMA (LLM) CONFIGURATION
# =============================================================================
OLLAMA_HOST=http://localhost:11434
# Models for different tasks (adjust based on your hardware)
# Lighter model for parsing tasks
OLLAMA_MODEL_LIGHT=llama3.1:8b-instruct-q8_0
# Heavier model for question generation, evaluation, and summary
OLLAMA_MODEL_HEAVY=llama3.1:70b-instruct-q4_K_M

# Inference settings
OLLAMA_TIMEOUT_MS=300000
OLLAMA_MAX_RETRIES=3

# =============================================================================
# WHISPER (STT) CONFIGURATION
# =============================================================================
WHISPER_HOST=http://localhost:8080
# Available models: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_MODEL=large-v3
WHISPER_TIMEOUT_MS=60000

# =============================================================================
# TTS CONFIGURATION
# =============================================================================
TTS_HOST=http://localhost:8081
TTS_TIMEOUT_MS=30000
# Voice ID for consistent interviewer voice
TTS_VOICE_ID=default

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Session expiration in hours (default: 24)
SESSION_EXPIRY_HOURS=24

# Cleanup job interval in minutes (default: 60)
CLEANUP_INTERVAL_MINUTES=60

# Maximum CV file size in bytes (default: 5MB)
MAX_CV_FILE_SIZE=5242880

# Interview settings
MAX_FOLLOW_UP_DEPTH=3
MAX_QUESTIONS_PER_INTERVIEW=15
MAX_INTERVIEW_DURATION_MINUTES=45

# Minimum match score to enable interview (0-100)
MIN_MATCH_SCORE_FOR_INTERVIEW=50

# =============================================================================
# FILE STORAGE PATHS
# =============================================================================
UPLOADS_DIR=/data/uploads
AUDIO_DIR=/data/audio

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable mock mode for AI services (returns canned responses)
MOCK_AI_SERVICES=false

# Enable detailed logging
DEBUG_MODE=false

# Node environment
NODE_ENV=development
